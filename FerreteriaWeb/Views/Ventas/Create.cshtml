@model FerreteriaWeb.Models.CrearVentaViewModel

<div class="container mt-5" style="max-width: 500px;">
    <div class="card shadow-sm border-0 rounded-4">
        <div class="card-body p-4">

            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger">@TempData["Error"]</div>
            }

            <h4 class="mb-4 text-center fw-light">
                Registrar Venta
            </h4>

            <form asp-action="Create" method="post">

                <div class="mb-3">
                    <label class="form-label small text-muted">Producto</label>
                    <select asp-for="ProductoId" asp-items="ViewBag.Productos" class="form-select rounded-3">
                        <option value="">-- Seleccione un producto --</option>
                    </select>
                </div>

                <div class="mb-4">
                    <label class="form-label small text-muted">Cantidad</label>
                    <input asp-for="Cantidad" class="form-control rounded-3" placeholder="Ingrese cantidad" />
                </div>

                <div class="d-grid">
                    <button type="submit" class="btn btn-dark rounded-3">
                        Confirmar Venta
                    </button>
                </div>

            </form>

        </div>
    </div>
</div>